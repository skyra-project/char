{
	"name": "@skyra/char",
	"version": "1.0.2",
	"description": "A character utility library with ASCII, Latin-1, and UTF-8 support based on .NET's Char.",
	"author": "@skyra",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": "dist/index.umd.js",
	"unpkg": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"homepage": "https://skyra-project.github.io/char",
	"files": [
		"dist"
	],
	"scripts": {
		"lint": "eslint src tests --ext ts --fix",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"docs": "typedoc",
		"test": "jest",
		"test:watch": "jest --watch",
		"update": "yarn up \"@*/*\" -i && yarn up \"*\" -i",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"sversion": "standard-version",
		"prepublishOnly": "yarn build",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.3.0",
		"@commitlint/config-conventional": "^16.2.4",
		"@sapphire/eslint-config": "^4.3.5",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.31",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.4.1",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"rollup": "^2.74.1",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.31.2",
		"standard-version": "^9.3.2",
		"ts-jest": "^28.0.2",
		"typedoc": "^0.22.15",
		"typescript": "^4.6.4"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/char.git"
	},
	"engines": {
		"node": ">=v14.18.0",
		"npm": ">=7.24.2"
	},
	"keywords": [
		"ascii",
		"latin-1",
		"utf-8",
		"typescript",
		"ts",
		"yarn",
		"char",
		"character",
		"utility"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/char/issues"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.1"
}
