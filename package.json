{
	"name": "@skyra/char",
	"version": "1.0.0",
	"description": "A character utility library with ASCII, Latin-1, and UTF-8 support based on .NET's Char.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@skyra",
	"license": "MIT",
	"private": false,
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint src tests --ext ts --fix",
		"format": "prettier --write {src,tests}/**/*.ts",
		"format:check": "prettier --check {src,tests}/**/*.ts",
		"docs": "typedoc",
		"test": "jest",
		"test:watch": "jest --watch",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@skyra/eslint-config": "^5.2.1",
		"@types/jest": "^26.0.6",
		"@types/node": "^14.0.22",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^7.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"jest-circus": "^26.1.0",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"standard-version": "^8.0.2",
		"ts-jest": "^26.1.1",
		"typedoc": "^0.17.8",
		"typescript": "^3.9.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/char.git"
	},
	"files": [
		"dist",
		"!dist/tsconfig.tsbuildinfo"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"keywords": [
		"ascii",
		"latin-1",
		"utf-8",
		"typescript",
		"ts",
		"yarn",
		"char",
		"character",
		"utility"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/char/issues"
	},
	"homepage": "https://skyra-project.github.io/char",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix --ext ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.2",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz"
	}
}
